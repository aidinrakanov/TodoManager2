<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTaskActivity">

    <EditText
        android:id="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter task title"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter task description"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/task_title"
        />

    <TextView
        android:id="@+id/task_deadline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="press to enter deadline =>"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/task_description"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/task_deadline_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose date"
        android:onClick="onChooseDate"
        app:layout_constraintTop_toBottomOf="@id/task_description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/task_deadline_text"
        />

    <Button
        android:id="@+id/task_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:onClick="onSave"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/task_deadline_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/task_cancel"
        />
    <Button
        android:id="@+id/task_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:onClick="onCancel"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/task_deadline_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/task_save"
        />

</androidx.constraintlayout.widget.ConstraintLayout>